<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a new listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" placeholder="Enter Title" class="form-control" required>
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid title
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea rows="10" cols="40" name="listing[description]" id="" placeholder="Enter description" class="form-control" required></textarea> 
                    <div class="invalid-feedback">
                        Please enter a valid description
                      </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                        <div class="invalid-feedback">
                            Please enter a valid price
                          </div>
                    </div>
    
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" type="text" placeholder="Enter Location" class="form-control" required>
                        <div class="invalid-feedback">
                            Please enter a valid location
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" placeholder="Enter country" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a valid country
                      </div>
                </div>
                <button class="btn btn-dark mb-3 add-btn">Add Listing</button>
            </form>
            <br>
        </div>
    </div>
</body>
